<plugin>
   <extension
         id="CTSProfiles"
         name="CTS Profiles"
         point="org.eclipse.gmf.runtime.emf.core.Pathmaps">
      <pathmap
            name="CTS_PROFILES"
            path="profiles"
            plugin="org.openhealthtools.mdht.uml.cts.core"/>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.uri_mapping">
      <mapping
            source="pathmap://CTS_PROFILES/"
            target="profiles/">
      </mapping>
   </extension>
  
   <extension
         id="CTSModels"
         name="CTS Models"
         point="org.eclipse.gmf.runtime.emf.core.Pathmaps">
      <pathmap
            name="CTS_MODELS"
            path="models"
            plugin="org.openhealthtools.mdht.uml.cts.core"/>
   </extension>
   <extension
         point="org.eclipse.emf.ecore.uri_mapping">
      <mapping
            source="pathmap://CTS_MODELS/"
            target="models/">
      </mapping>
   </extension>
</plugin>
